<odoo>
<template id="report_template">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.external_layout">
                <div class="page">
                    <!-- عنوان التقرير -->
                    <h1 class="text-center"
                        style="color: #007BFF; font-size: 28px; font-weight: bold; margin-bottom: 20px;">
                        Detailed TestApp Report
                    </h1>

                    <!-- وصف التقرير -->
                    <p style="text-align: center; font-size: 16px; color: #555; margin-bottom: 30px;">
                        This report provides a detailed overview of the selected records in the TestApp module.
                    </p>

                    <!-- جدول التقرير -->
                    <div class="table-responsive">
                        <table class="table"
                            style="width: 90%; margin: auto; border-collapse: collapse; margin-top: 20px; font-size: 14px; border: 1px solid black; text-align: center; table-layout: fixed;">
                            <!-- رأس الجدول -->
                            <thead>
                                <tr style="background-color: #343A40; color: #FFFFFF; font-size: 16px;">
                                    <th style="padding: 10px; border: 1px solid black;">Number</th>
                                    <th style="padding: 10px; border: 1px solid black;">Field</th>
                                    <th style="padding: 10px; border: 1px solid black;">Value</th>
                                    <th style="padding: 10px; border: 1px solid black;">Notes</th>
                                </tr>
                            </thead>

                            <!-- جسم الجدول -->
                            <tbody>
                                <tr style="background-color: #F8F9FA;">
                                    <td style="padding: 10px; border: 1px solid black;">1</td>
                                    <td style="padding: 10px; border: 1px solid black;">Name</td>
                                    <td style="padding: 10px; border: 1px solid black;">
                                        <t t-esc="doc.name"/>
                                    </td>
                                    <td style="padding: 10px; border: 1px solid black;">Main identifier of the record</td>
                                </tr>
                                <tr style="background-color: #E9ECEF;">
                                    <td style="padding: 10px; border: 1px solid black;">2</td>
                                    <td style="padding: 10px; border: 1px solid black;">Date</td>
                                    <td style="padding: 10px; border: 1px solid black;">
                                        <t t-esc="doc.date"/>
                                    </td>
                                    <td style="padding: 10px; border: 1px solid black;">Date of creation or update</td>
                                </tr>
                                <tr style="background-color: #F8F9FA;">
                                    <td style="padding: 10px; border: 1px solid black;">3</td>
                                    <td style="padding: 10px; border: 1px solid black;">Selection</td>
                                    <td style="padding: 10px; border: 1px solid black;">
                                        <t t-esc="doc.selection"/>
                                    </td>
                                    <td style="padding: 10px; border: 1px solid black;">Selection for the record</td>
                                </tr>
                                <tr style="background-color: #E9ECEF;">
                                    <td style="padding: 10px; border: 1px solid black;">4</td>
                                    <td style="padding: 10px; border: 1px solid black;">State</td>
                                    <td style="padding: 10px; border: 1px solid black;">
                                        <t t-esc="doc.state"/>
                                    </td>
                                    <td style="padding: 10px; border: 1px solid black;">Current state of the record</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Footer التقرير -->
                    <div style="margin-top: 30px; text-align: center; font-size: 12px; color: #777;">
                        <p>Generated by TestApp | © 2024 Gamal Company</p>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>
